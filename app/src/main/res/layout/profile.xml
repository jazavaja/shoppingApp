<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:src="#58aeff"/>

        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_10sdp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_marginLeft="@dimen/_15sdp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:id="@+id/profile_pic"
                            android:src="@drawable/logo"
                            android:layout_centerVertical="true"

                            android:elevation="@dimen/_5sdp"
                            android:layout_gravity="center_horizontal"
                            tools:targetApi="lollipop" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:id="@+id/add_picture_profile"
                            android:src="@drawable/ic_add_circle72"
                            android:elevation="@dimen/_10sdp"
                            android:layout_gravity="right|bottom"
                            tools:targetApi="lollipop" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_weight="1">

                        <me.grantland.widget.AutofitTextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="تعداد فالورها"
                            android:gravity="center"
                            tools:ignore="NestedWeights" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:id="@+id/count_follower_me"
                            android:layout_weight="1"
                            android:textSize="@dimen/_12sdp"
                            android:text="20"
                            android:gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/_10sdp">

                        <me.grantland.widget.AutofitTextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:text="تعداد علاقه مندی ها"
                            android:gravity="center"
                            tools:ignore="NestedWeights" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:id="@+id/count_favorite"
                            android:layout_weight="1"
                            android:textSize="@dimen/_13sdp"
                            android:text="1"
                            android:gravity="center"/>

                    </LinearLayout>

                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp">

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14sdp"
                        android:hint="نام کاربری"
                        android:id="@+id/username_edt"
                        android:gravity="center"
                        android:layout_gravity="center" />

                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_14sdp"
                            android:id="@+id/family"
                            android:hint=" نام خانوادگی"
                            android:gravity="center"
                            android:layout_gravity="center" />


                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_14sdp"
                            android:id="@+id/name"
                            android:hint="نام "
                            android:gravity="center"
                            android:layout_gravity="center" />


                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14sdp"
                        android:id="@+id/address"
                        android:hint="ادرس کامل"
                        android:gravity="center"
                        android:layout_gravity="center" />


                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14sdp"
                        android:id="@+id/postalCode"
                        android:hint="کد پستی"
                        android:gravity="center"
                        android:layout_gravity="center" />


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14sdp"
                        android:id="@+id/mobile"
                        android:hint="شماره موبایل"
                        android:gravity="center"
                        android:layout_gravity="center"/>

                </android.support.design.widget.TextInputLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/btn_exit"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:maxLines="1"
                        android:layout_height="@dimen/_35sdp"
                        android:text="خروج از حساب کاربری"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/_17sdp"
                        android:layout_marginRight="@dimen/_17sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textSize="@dimen/_13sdp"
                        android:clickable="true"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/btn_enter" />
                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/btn_saveProfile"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="@dimen/_35sdp"
                        android:text="ذخیره"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/_17sdp"
                        android:layout_marginRight="@dimen/_17sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textSize="@dimen/_13sdp"
                        android:clickable="true"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/btn_enter" />
                </LinearLayout>
                <GridView
                    android:id="@+id/gridviewFavorite"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:numColumns="auto_fit"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:columnWidth="@dimen/_70sdp"/>

            </LinearLayout>

            </ScrollView>
        </android.support.v7.widget.CardView>

</FrameLayout>
